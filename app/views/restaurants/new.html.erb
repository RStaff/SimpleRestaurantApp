<h1>Enter New Restaurant</h1>

<%= form_for(@restaurant)  do |r| %>
  <p>
    <%= r.label :name %><br>
    <%= r.text_field :name %>
  </p>
 
  <p>
    <%= r.label :description %><br>
    <%= r.text_area :description %>
  </p>
 
  <p>
    <%= r.label :address %><br>
    <%= r.text_field :address %>
  </p>

   <p>
    <%= r.label :phone_number %><br>
    <%= r.text_field :phone_number %>
  </p>

  <p>
    <%= r.submit %>
  </p>
<% end %>